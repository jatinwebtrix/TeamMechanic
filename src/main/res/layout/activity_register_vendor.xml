<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vincit.mechanic.mrmechanic.RegisterVendor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            >

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/upload_profile"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/vendor_full_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:hint="Full Name"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />
            <EditText
                android:id="@+id/vendor_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:hint="Enter Email"
                android:textColorHint="@color/colorPrimary"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"

                >
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="+91"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:gravity="bottom"
                    android:textColor="@color/colorPrimary"
                    />
                <EditText
                    android:id="@+id/vendor_phone"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"
                    />
            </LinearLayout>


            <EditText
                android:id="@+id/vendor_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:hint="Password"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                android:inputType="textPassword"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                >

                <EditText
                    android:id="@+id/vendor_address1"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="Address1"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"
                    />
                <EditText
                    android:id="@+id/vendor_address2"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="Address2"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp"
                android:layout_marginTop="40dp"
                >

                <Spinner
                    android:id="@+id/vendor_state"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="State"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    />
                <Spinner
                    android:id="@+id/vendor_city"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="City"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"

                >


                <EditText
                    android:id="@+id/vendor_pin"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="pincode"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"

                    />

                <Spinner
                    android:id="@+id/vendor_available"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="State"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>





                <Button
                    android:id="@+id/vendor_gallery"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/colorWhite"
                    android:text="Workshop/Gallery Photo"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:theme="@style/EditTextTheme2"
                    android:background="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    />


            <TextView
                android:id="@+id/vendor_services"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                android:text="Services"
                />




            <EditText
                android:id="@+id/vendor_profile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:hint="Profile Description"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />

            <EditText
                android:id="@+id/vendor_hours"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:hint="Hours of availability"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:text="No Address Chosen"
                />

            <Button
                android:id="@+id/user_location"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorWhite"
                android:text="Select Location"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                android:background="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:onClick="SelectMap"
                />


            <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--xmlns:tools="http://schemas.android.com/tools"-->
                <!--android:id="@+id/map"-->
                <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_height="300dp"-->
                <!--tools:context="com.example.mapwithmarker.MapsMarkerActivity" />-->



            <TextView
                android:id="@+id/vendor_account"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                android:text="Account Details"
                />


            <EditText
                android:id="@+id/vendor_bank_account"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Bank Account"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />
            <EditText
                android:id="@+id/vendor_bank_ifsc"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Bank IFSC"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />
            <EditText
                android:id="@+id/vendor_bank_branch"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Bank Branch"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />
            <EditText
                android:id="@+id/vendor_bank_account_type"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Bank Account Type"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                />


            <Button
                android:id="@+id/vendor_check_btn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorWhite"
                android:text="Upload Cancel Check"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:theme="@style/EditTextTheme2"
                android:background="@color/colorPrimaryDark"
                android:textAlignment="center"
                />




            <Button
                android:id="@+id/vendor_register"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorWhite"
                android:text="Submit"
                android:textSize="12sp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:onClick="RegisterVendor"
                />




        </LinearLayout>
    </ScrollView>



</LinearLayout>
