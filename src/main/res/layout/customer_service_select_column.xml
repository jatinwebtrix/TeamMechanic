<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <ImageView
     android:id="@+id/customer_service_icon"
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:src="@drawable/testicon"
     android:background="@color/colorWhite"
     android:scaleType="fitXY"
     android:padding="10dp"
     android:clickable="true"
     />

    <TextView
        android:id="@+id/customer_service_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDarkTranparent"
        android:foregroundGravity="center"
        android:text="ahsjh"
        android:textSize="14sp"
        />
    </RelativeLayout>
</LinearLayout>